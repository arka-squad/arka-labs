{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://arka/schemas/gates/EvidenceRef.schema.json",
  "title": "EvidenceRef",
  "type": "object",
  "required": ["type", "path"],
  "properties": {
    "type": { "type": "string", "enum": ["ndjson", "json", "text", "url"] },
    "path": { "type": "string" },
    "bytes": { "type": "integer", "minimum": 0 },
    "sha256": { "type": "string", "pattern": "^[a-f0-9]{64}$" }
  },
  "additionalProperties": false
}

