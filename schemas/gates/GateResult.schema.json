{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://arka/schemas/gates/GateResult.schema.json",
  "title": "GateResult",
  "type": "object",
  "required": ["gate_id", "status", "metrics", "evidence"],
  "properties": {
    "gate_id": { "type": "string" },
    "status": { "type": "string", "enum": ["pass", "fail", "warn"] },
    "metrics": { "type": "object", "additionalProperties": { "type": ["number", "string"] } },
    "evidence": {
      "type": "array",
      "items": { "$ref": "EvidenceRef.schema.json" }
    },
    "message": { "type": "string" }
  },
  "additionalProperties": false
}

