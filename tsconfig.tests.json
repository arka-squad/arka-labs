{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "dist-tests",

    "rootDir": ".",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "jsx": "react-jsx"
  },

    "include": [
      "tests/metrics.test.ts",
      "tests/metrics.observability.test.ts",
      "tests/openai-stream.test.ts",
      "tests/webhook.test.ts",
      "tests/chat-threads.test.ts",
      "tests/login.page.test.ts",
      "tests/gates.api.test.ts",
      "tests/gates.webhook.test.ts",
      "app/api/metrics/**/*.ts",
      "app/api/documents/**/*.ts",
      "services/**/*.ts"
    ],

  "exclude": ["lib/storage.ts"]
}
