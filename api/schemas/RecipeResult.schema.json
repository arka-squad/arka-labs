{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "RecipeResult",
  "type": "object",
  "required": ["recipe_id", "status", "summary", "steps"],
  "properties": {
    "recipe_id": {"type": "string"},
    "status": {"enum": ["pass", "fail", "warn", "error"]},
    "summary": {
      "type": "object",
      "required": ["pass", "fail", "warn"],
      "properties": {
        "pass": {"type": "integer", "minimum": 0},
        "fail": {"type": "integer", "minimum": 0},
        "warn": {"type": "integer", "minimum": 0}
      },
      "additionalProperties": false
    },
    "steps": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "status"],
        "properties": {
          "id": {"type": "string"},
          "status": {"enum": ["pass", "fail", "warn", "error"]},
          "gate_result": {"$ref": "./GateResult.schema.json"}
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
