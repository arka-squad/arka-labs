{
  "name": "arka-console",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build:css": "tailwindcss -i ./app/globals.css -o ./.next/tailwind.css",
    "build": "npm run build:css && next build",
    "start": "next start",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "test": "npm run test:pre && npm run test:node",
    "test:pre": "tsc -p tsconfig.tests.json",
    "test:node": "node --test dist-tests/tests/metrics.test.js",

    "api:lint": "npx --no-install @redocly/cli lint --config redocly.yaml arka"

  },
  "dependencies": {
    "next": "14.2.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "pg": "^8.11.1",
    "openai": "^4.5.0",
    "@vercel/postgres": "^0.5.1",
    "@vercel/blob": "0.15.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "zod": "^3.22.4",
    "@vercel/blob": "^0.15.0"
  },
  "devDependencies": {
    "typescript": "^5.4.0",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "eslint": "^8.56.0",
    "eslint-config-next": "14.2.3",
    "prettier": "^3.0.0",
    "@redocly/cli": "^1.16.0",
    "ajv": "^8.12.0",
    "tailwindcss": "^3.4.4",
    "postcss": "^8.4.31",
    "autoprefixer": "^10.4.16"
  }
}
