{
  "name": "arka-console",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:clean": "node scripts/clean-ports.js && next dev",
    "build:css": "tailwindcss -i ./styles/base.css -o ./.next/tailwind.css",
    "build": "npm run build:css && next build",
    "start": "next start",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "test": "npm run test:pre && npm run test:node",
    "test:pre": "tsc -p tsconfig.tests.json",
    "test:node": "node --test dist-tests/tests/*.test.js",
    "test:ui": "jest --config jest.config.cjs --colors 'tests/components/**/*.test.tsx'",
    "ci:net:selfcheck": "node scripts/net_self_check.mjs",
    "api:lint": "npx --no-install @redocly/cli lint --config redocly.yaml arka",
    "prepare": "node scripts/prepare-hooks.mjs",
    "ci:pr:base": "node -e \"process.stdout.write(require('child_process').spawnSync('git',['rev-parse','--verify','origin/main'],{stdio:'pipe'}).status===0?'origin/main':'HEAD~1')\"",
    "ci:pr:scan": "BASE=$(npm run -s ci:pr:base); git diff --name-only \"$BASE\"...HEAD | grep -E '^(node_modules/|\\.next/|package-lock\\.json)$' && exit 1 || true; git diff --name-only \"$BASE\"...HEAD | grep -Ei '\\.(png|jpe?g|gif|pdf|zip|wasm)$' && exit 1 || true",
    "ci:pr:check": "test -s logs/vercel_build_*.log && grep -i 'Compiled successfully' logs/vercel_build_*.log && test -s arka-meta/reports/codex/observabilite.md && grep -q '\"error_rate_percent\"' arka-meta/reports/codex/observabilite.md && grep -q '\"page_size\"' arka-meta/reports/codex/observabilite.md && test -s arka-meta/reports/codex/logs_api_metrics.json",
    "ci:pr:sums": "sha256sum logs/vercel_build_*.log arka-meta/reports/codex/logs_api_metrics.json arka-meta/reports/codex/observabilite.md | sed 's|  ./||' > arka-meta/reports/codex/R2_5/sha256sums.txt && test -s arka-meta/reports/codex/R2_5/sha256sums.txt",
    "ci:encoding:check": "node scripts/check_encoding.mjs"
  },
  "dependencies": {
    "@radix-ui/react-tabs": "^1.1.13",
    "@vercel/blob": "^0.15.0",
    "@vercel/postgres": "^0.5.1",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "crypto": "^1.0.0",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "ioredis": "^5.7.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "lucide-react": "^0.452.0",
    "next": "14.2.3",
    "node-fetch": "^2.7.0",
    "openai": "^4.5.0",
    "pg": "^8.16.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-icons": "^5.5.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@redocly/cli": "^1.16.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^29.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "ajv": "^8.12.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.56.0",
    "eslint-config-next": "14.2.3",
    "glob": "^11.0.3",
    "jest": "^30.1.3",
    "next-test-api-route-handler": "^1.1.0",
    "node-mocks-http": "^1.11.0",
    "postcss": "^8.4.31",
    "prettier": "^3.0.0",
    "tailwindcss": "^3.4.4",
    "ts-jest": "^29.4.1",
    "tsx": "^4.20.5",
    "typescript": "^5.4.0"
  }
}
